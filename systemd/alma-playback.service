[Unit]
Description=Alma TV Playback Orchestrator
After=network.target

[Service]
Type=simple
User=alma
Group=alma
WorkingDirectory=/opt/alma-tv
Environment="PATH=/opt/alma-tv/.venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/opt/alma-tv/.venv/bin/alma playback run --daemon
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/log/alma /var/lib/alma /var/cache/alma

[Install]
WantedBy=multi-user.target
