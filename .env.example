# Alma TV Configuration Example
# Copy this file to .env and adjust values for your setup

# Media Library
ALMA_MEDIA_ROOT=/mnt/media/cartoons
ALMA_INTRO_PATH=/mnt/media/intros/alma_intro.mp4
ALMA_OUTRO_PATH=/mnt/media/outros/alma_outro.mp4

# Scheduling
ALMA_START_TIME=19:00
ALMA_TARGET_DURATION_MINUTES=30
ALMA_REPEAT_COOLDOWN_DAYS=14

# Database
ALMA_DATABASE_URL=sqlite:///var/lib/alma/alma.db

# Logging
ALMA_LOG_LEVEL=INFO
ALMA_LOG_FILE=/var/log/alma/alma.log

# Playback
ALMA_PLAYER=vlc  # Options: vlc, omxplayer
ALMA_DISPLAY=:0

# Clock Display
ALMA_CLOCK_UPDATE_INTERVAL=60  # seconds
ALMA_CLOCK_SVG_PATH=/var/cache/alma/clock.svg

# Feedback UI
ALMA_FEEDBACK_TIMEOUT=120  # seconds
ALMA_FEEDBACK_PORT=8080

# Development
ALMA_DEBUG=false
ALMA_DRY_RUN=false
